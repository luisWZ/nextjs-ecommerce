generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  email          String   @unique
  password       String
  name           String
  role           Role     @default(CLIENT)
  billingAddress Address?
  Order          Order[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

type Address {
  firstName String
  lastName  String
  address   String
  address_2 String @default("")
  city      String
  zipCode   String
  country   String
  phone     String
}

enum Role {
  ADMIN
  CLIENT
}

model Product {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  slug        String       @unique
  tags        String[]
  description String
  images      String[]
  inStock     Int
  price       Int
  sizes       ValidSizes[]
  title       String
  type        ValidTypes
  gender      Gender
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([tags])
  @@index([title])
}

enum ValidSizes {
  XS
  S
  M
  L
  XL
  XXL
  XXXL
}

enum ValidTypes {
  shirts
  pants
  hoodies
  hats
}

enum Gender {
  men
  women
  kids
  unisex
}

model Order {
  id              String      @id @default(auto()) @map("_id") @db.ObjectId
  userId          String      @db.ObjectId
  orderItems      OrderItem[]
  deliveryAddress Address
  itemCount       Int
  subTotal        Float
  tax             Float
  total           Float
  paymentResult   String?
  isPaid          Boolean     @default(false)
  paidAt          Int?
  transactionId   String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  User            User        @relation(fields: [userId], references: [id])

  @@index([userId])
}

type OrderItem {
  price    Int
  slug     String
  gender   String
  title    String
  quantity Int
  size     ValidSizes
  image    String
}
